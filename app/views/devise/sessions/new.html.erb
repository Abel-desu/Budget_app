<%unless user_signed_in?%>
<%= render 'shared/navbar'%>
<%end%>

<div class="container py-5 h-100">
<div class="w-full h-screen lg:w-1/2 grid grid-cols-1 grid-rows-6 relative lg:p-10 lg:h-5/6">
  <div class="row-span-4 h-fit lg:h-auto flex justify-center">
<h1 class="bugdet font-Bold text-4xl text-black text-start z-50">BUGDET APP</h1> 

    <%= image_tag "11.png", class: "image absolute -top-10 w-full lg:w-auto bg-white lg:relative lg:top-0"%>
    </div>

<div class="row d-flex justify-content-end align-items-center h-100">
      <div class="image col-12 col-md-8 col-lg-6 col-xl-5">
      
        <div class="shadow-lg p-3 mb-5 bg-body rounded  " style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign in</h3>
           <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-outline mb-4">
             <%= f.label :email, class: "form-label" %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-outline mb-4">
              <%= f.label :password, class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <!-- Checkbox -->
              <% if devise_mapping.rememberable? %>
            <div class="form-check d-flex justify-content-start mb-4">
               <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
            </div>
             <% end %>

                <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block"%>
            <hr class="my-4">

           <% end %>
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>